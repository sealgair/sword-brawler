function bound(v, low, high)
 return min(max(v, low), high)
end

-- class maker
function class(proto, base)
 proto = proto or {}
 proto.__index = proto
 setmetatable(proto, {
  __index = base,
  __call = function(cls, ...)
   local self = setmetatable({
    type=proto
   }, proto)
   if(self.init) self:init(...)
   return self
  end
 })
 proto.subclass = function(subproto)
  return class(subproto, proto)
 end
 return proto
end

-- mob definition
mob = class({
 x=0, y=0, flipped=false,
 sprite=0,
})
mobs = {}

function mob:init(x, y)
 self.x = x
 self.y = y
 add(mobs, self)
end

function mob:draw()
 spr(self.sprite, self.x, self.y, 1, 1, self.flipped, false)
end

function mob:update()
end

-- player
player = mob.subclass({
 sprite=1,
 swordsprite=16,
})

function player:init(p, x, y)
 mob.init(self, x, y)
 self.p = p-1
end

function player:update()
 if btn(btns.l, self.p) then
  self.x = self.x - 1
  self.flipped = true
 end
 if btn(btns.r, self.p) then
  self.x = self.x + 1
  self.flipped = false
 end
 self.x = bound(self.x, 0, 120)

 if btn(btns.u, self.p) then
  self.y = self.y - 1
 end
 if btn(btns.d, self.p) then
  self.y = self.y + 1
 end
 self.y = bound(self.y, 58, 120)
end

function _init()
 p1 = player(1, 10, 70)
end

function _update()
 for m in all(mobs) do
  m:update()
 end
end

function draw_bg()
	rectfill(0,0,128,128,12)
	rectfill(0,64,128,128,15)
end

function _draw()
	draw_bg()
 for m in all(mobs) do
  m:draw()
 end
end

