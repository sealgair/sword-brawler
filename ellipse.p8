#include utils.lua

function bmask(a,b)
 if band(a,b) == 0 then
 	return 0
 else
 	return 1
 end
end

dt = 1/30
t = 0
l = 10
function _update()
 t += dt
 if (t>l) t=0
end

function _draw()
	rectfill(0,0,128,128,0)

	color(8)
	ellipse(32,112, 8,1)--, false, 0b0111)

	circfill(64,64,4,15)
	shadow(64,64,4, t/l, 0)
end

